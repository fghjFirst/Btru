@model Btru.Models.FavoriteBook

@{
    ViewData["Title"] = "RemoveFromFavorites";
}

<h2>Delete</h2>

<h3>Are you sure you want to remove @Model.Book.Name by @Model.Book.Author from favorites?</h3>
<div>
    <h4>FavoriteBook</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
    <form asp-action="RemoveFromFavorites">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes, I'm sure" class="btn btn-default" /> |
        <a asp-action="Index">No, nevermind</a>
    </form>
</div>
