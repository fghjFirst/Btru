@model Btru.Models.SleepSchedule

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>SleepSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditWentToSleep">
            <div class="form-group">
                <label asp-for="WentToSleep" class="control-label"></label>
                <input name="time" asp-for="WentToSleep" class="form-control" />
                <span asp-validation-for="WentToSleep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Shedual</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
